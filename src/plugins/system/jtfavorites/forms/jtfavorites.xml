<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="jtfavorites" label="PLG_SYSTEM_JTFAVORITES_FIELDSET_LABEL">
		<field name="add_to_favorites"
		       type="radio"
		       default="0"
		       class="btn-group btn-group-yesno radio"
		       label="PLG_SYSTEM_JTFAVORITES_ADD_FIELD_LABEL"
		       description="PLG_SYSTEM_JTFAVORITES_ADD_FIELD_DESCRIPTION"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="favorite_title"
		       type="text"
		       maxlength="30"
		       label="PLG_SYSTEM_JTFAVORITES_TITLE_FIELD_LABEL"
		       description="PLG_SYSTEM_JTFAVORITES_TITLE_FIELD_DESCRIPTION"
		       showon="add_to_favorites:1"
		/>
		<field name="favorite_title_note"
		       type="note"
		       class="alert alert-info"
		       description="PLG_SYSTEM_JTFAVORITES_TITLE_FIELD_DESCRIPTION"
		       showon="add_to_favorites:1"
		/>
	</fieldset>
</form>
