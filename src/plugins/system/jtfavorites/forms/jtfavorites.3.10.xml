		       label="PLG_SYSTEM_JTFAVORITES_TITLE_FIELD_DESCRIPTION"
		       showon="add_to_favoites:1"
		/>
		<field name="favorite_title"
		       type="text"
		       maxlength="30"
		       label="PLG_SYSTEM_JTFAVORITES_TITLE_FIELD_LABEL"
		       description="PLG_SYSTEM_JTFAVORITES_TITLE_FIELD_DESCRIPTION"
		       showon="add_to_favoites:1"
